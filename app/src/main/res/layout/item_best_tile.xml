<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"

        android:clickable="true"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">







            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                >









                <RelativeLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_170sdp"

                    android:id="@+id/avatar"

                    >

                    <ImageView

                        android:layout_width="match_parent"
                        android:id="@+id/img"
                        android:layout_height="match_parent"




                      />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                    >

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/rating_bar"
                            style="?attr/ratingBarStyleIndicator"
                            android:layout_width="93dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:isIndicator="false"
                            android:numStars="3"
                            android:rating="3"
                            android:scaleX=".5"
                            android:scaleY=".5"
                            android:theme="@style/RatingBar" />
                        <TextView
                            android:id="@+id/login_btn"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_18sdp"

android:layout_centerVertical="true"
                            android:background="@drawable/rounded_corners_gray"
                            android:text="3 Km"
android:layout_marginEnd="@dimen/_5sdp"
                            android:textStyle="bold"

                            android:textColor="@color/colorWhite"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>
                </RelativeLayout>














                <RelativeLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_20sdp"
             android:layout_below="@+id/avatar"

                    android:id="@+id/layout_persectage">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"


                        android:text="00.00/-"
                        android:layout_marginEnd="@dimen/_5sdp"
                       android:fontFamily="@font/poppins_mediumitalic"

                        android:textColor="@color/grey"
                   />
                    <TextView
                        android:id="@+id/tv_percentage"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center"
                        android:background="@drawable/rounded_corners_gray"
                        android:backgroundTint="@color/colorRed"
                        android:text="00%"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textStyle="bold"

                        android:textColor="@color/colorWhite"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>





                <TextView
                    android:id="@+id/tv_price_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"

android:layout_below="@+id/layout_persectage"
                    android:text="00.00/-"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_mediumitalic"
android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    />

















            </RelativeLayout>




            <LinearLayout
                android:id="@+id/accept_reject_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >

                <TextView
                    android:id="@+id/tv_cat_type"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@color/colorWhite"
                    android:text="Product Service "
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    />
                <TextView
                    android:id="@+id/tv_cat_name"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@color/colorWhite"
                    android:text="Title Product "
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>